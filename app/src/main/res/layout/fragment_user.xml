<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="main.dailynovel.Fragment.BookFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/relayoutAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        tools:ignore="UselessParent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:minHeight="?attr/actionBarSize"
            android:textAlignment="center"
            android:theme="?attr/actionBarTheme"
            app:title="Cài đặt"
            app:titleTextColor="@android:color/background_dark" />


            <RelativeLayout
                android:layout_below="@id/toolbar2"
                android:id="@id/relayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button">

                <RelativeLayout
                    android:id="@+id/relayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/avatar"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/logo"
                        app:civ_border_color="#EEEEEE"
                        app:civ_border_width="4dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="#8BC34A"
                        app:civ_shadow_radius="10" />
                </RelativeLayout>


                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài khoản"
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:layout_toEndOf="@id/relayout3"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng nhập"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:layout_below="@id/txtUser"
                    android:layout_toEndOf="@id/relayout3"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/relayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relayout2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingStart="20dp"
                        android:text="Tài khoản"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlSymmetry" />
                </LinearLayout>
                <Button
                    android:id="@+id/button6"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:drawableStart="@drawable/ic_settings"
                    android:drawableEnd="@drawable/ic_setting_next"
                    android:text="Cài đặt"
                    android:drawablePadding="8dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:drawableStart="@drawable/ic_setting_book"
                    android:drawableEnd="@drawable/ic_setting_next"
                    android:text="Truyện đã đăng"
                    android:drawablePadding="8dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:drawableStart="@drawable/ic_setting_book2"
                    android:drawableEnd="@drawable/ic_setting_next"
                    android:text="Truyện đã bình luận"
                    android:drawablePadding="8dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Liên hệ"
                        android:paddingTop="5dp"
                        android:paddingStart="20dp"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlSymmetry" />
                </LinearLayout>

                <Button
                    android:id="@+id/button9"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:drawableStart="@drawable/ic_setting_info"
                    android:drawableEnd="@drawable/ic_setting_next"
                    android:text="Thông tin"
                    android:drawablePadding="8dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:drawableStart="@drawable/ic_setting_policy"
                    android:drawableEnd="@drawable/ic_setting_next"
                    android:text="Chính sách"
                    android:drawablePadding="8dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:drawableStart="@drawable/ic_setting_email"
                    android:drawableEnd="@drawable/ic_setting_next"
                    android:text="Email liên hệ"
                    android:drawablePadding="8dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button12"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawablePadding="8dp"
                    android:text="Đăng xuất"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
